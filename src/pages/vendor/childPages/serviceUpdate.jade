include ../../../common/header

form(name='form',style="margin-top:2.97rem;",novalidate="novalidate")

    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="{true:'weui-cell_warn',false:''}[form.name.$error.required]")
            div.weui-cell__hd
                label.weui-label 标题
            div.weui-cell__bd
                input.weui-input(
                name='name',
                ng-model='service.name',
                ng-model-options="{ updateOn: 'blur' }",
                placeholder="服务标题,必须填写",
                required)
            div.weui-cell__ft(ng-show='form.name.$error.required')
                i.weui-icon-warn

    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="")
            div.weui-cell__hd
                label.weui-label 缩略图
            div.weui-cell__bd
                img.img-thumbnail(src='data:image/svg+xml;base64,')

    div.weui-cells__title 描述
    div.weui-cells.weui-cells_form
        .weui-cell(ng-class="{true:'weui-cell_warn',false:''}[form.description.$error.required]")
            .weui-cell__bd
                textarea.weui-textarea(
                name='description',
                ng-model='service.description',
                placeholder="服务描述",
                required,
                rows=3)

    div.weui-cells__title 内容
    div.weui-cells.weui-cells_form
        .weui-cell(ng-class="{true:'weui-cell_warn',false:''}[form.content.$error.required]")
            .weui-cell__bd
                textarea.weui-textarea(
                name='content',
                ng-model='service.content',
                placeholder="服务内容",
                required,
                rows=8)

    div#actions

    div.weui-btn-area
        a.weui-btn.weui-btn_primary.btn.myaw(ng-click='serviceUpdate(service)') 确定
        a.weui-btn.weui-btn_default.btn.myab(ng-click="cancelUpdate(service.id)") 取消