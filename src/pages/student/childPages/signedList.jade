div(ui-content-for='navBar')
    a.pull-right(data-toggle="dropdown",href="javascript:void(0)")
        i.icon.fa.fa-plus-circle.fa-inverse
    div(ui-drop-menu='menus')
    h1.title 我的活动
div
    div.weui-panel__hd  我的活动
    div.weui-panel__bd(ng-repeat='list in lists track by $index')
        a.weui-media-box.weui-media-box_appmsg.ui-list-item(
        ng-repeat='item in list track by $index'
        href='#/signed/{{item.id}}')
            div.weui-media__hd
                img.weui-media__thumb(src='http://img3.3lian.com/2013/c2/43/93.jpg',alt)
            div.weui-media__bd
                h4.weui-media__title {{item.name}}
                p.weui-media__desc {{item.description}}
    div.weui-panel__ft(ng-hide='listInfo.end')
        a.weui-cell.weui-cell_access.weui-cell_link(href='javascript:void(0);' ng-click='getLists()')
            div.weui-cell__bd 查看更多
            span.weui-cell__ft
