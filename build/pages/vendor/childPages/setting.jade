include ../../../common/vendor_header
form(name='form',style="margin-top:2.97rem;",novalidate="novalidate")

    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="{true:'weui-cell_warn',false:''}[form.name.$error.required]")
            div.weui-cell__hd
                label.weui-label 企业名称
            div.weui-cell__bd
                input.weui-input(
                name='name',
                ng-model='vendor.name',
                ng-model-options="{ updateOn: 'blur' }",
                placeholder="企业名称,必须填写",
                required)
            div.weui-cell__ft(ng-show='form.name.$error.required')
                i.weui-icon-warn
    div.weui-cells__title 描述
    div.weui-cells.weui-cells_form
        .weui-cell
            .weui-cell__bd
                textarea.weui-textarea(
                name='remark',
                ng-model='vendor.remark',
                placeholder="企业描述",
                rows=3)

    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="")
            div.weui-cell__hd
                label.weui-label logo
            div.weui-cell__bd
                img.img-circle(src='data:image/svg+xml;base64,')
            div.weui-cell__ft(ng-show='')
                i.weui-icon-warn
    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="")
            div.weui-cell__hd
                label.weui-label 服务类型
            div.weui-cell__bd
                input.weui-input(
                name='st',
                value='报名贴'
                disabled)

    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="")
            div.weui-cell__hd
                label.weui-label 手机
            div.weui-cell__bd
                input.weui-input(
                name='mobil',
                ng-model='vendor.mobile',
                placeholder="输入您的联系手机",
                )

    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="")
            div.weui-cell__hd
                label.weui-label 固定电话
            div.weui-cell__bd
                input.weui-input(
                name='phone',
                ng-model='vendor.phone',
                placeholder="输入您的联系固话",
                )

    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="")
            div.weui-cell__hd
                label.weui-label 营业执照
            div.weui-cell__bd
                input.weui-input(
                name='bl',
                value='xxxx-xxxx-xxxx-xxxx'
                disabled)

    div.weui-cells.weui-cells_form
        div.weui-cell(ng-class="")
            div.weui-cell__hd
                label.weui-label 地址
            div.weui-cell__bd
                input.weui-input(
                name='address',
                ng-model='vendor.address',
                placeholder="输入您的联系地址",
                )
    div.weui-btn-area
        a.weui-btn.weui-btn_primary.btn.myaw(ng-disabled="form.$invalid",ng-click='vendorUpdate(vendor)') 确定