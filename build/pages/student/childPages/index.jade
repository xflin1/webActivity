    div(ui-content-for='navBar')
        a.pull-right(data-toggle="dropdown",href="javascript:void(0)")
            i.icon.fa.fa-plus-circle.fa-inverse
        div(ui-drop-menu='menus')
        h1.title 信息列表

    div.weui-tabbar(ng-repeat='menu in menus track by $index')
        a.weui-tabbar__item(ng-href='{{menu.url}}')
            i.weui-tabbar__icon(class='fa-{{menu.icon}}')
            p.weui-tabbar__label {{menu.name}}
div
    div.weui-panel__hd 信息列表
    div.weui-panel__bd(ng-repeat='list in lists track by $index')
        a.ui-list-items(
        ng-repeat='item in list track by $index'
        href='#/loader/{{item.id}}')
            div.ui-list-items-img
                div
                    img(ng-src='/thumbnail/{{item.image}}' alt)
            div.ui-list-items-content
                div
                    h4 {{item.name}}
                    p {{item.description}}
                div
                    div
                        .fa.fa-clock-o
                        | &nbsp{{item.ts*1000|date:'MM-dd hh:mm'}}
                    div(ui-user-nickname='item.uid')
    div.weui-panel__ft(ng-hide='listInfo.end')
        a.weui-cell.weui-cell_access.weui-cell_link(href='javascript:void(0);' ng-click='getLists()')
            div.weui-cell__bd 查看更多
            span.weui-cell__ft